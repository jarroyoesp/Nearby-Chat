<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="@dimen/general_padding"
                android:paddingTop="@dimen/general_padding">

    <ImageView
            android:id="@+id/item_rv_end_point_iv_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_gray_24dp"
            android:layout_marginLeft="@dimen/general_padding"/>

    <RelativeLayout
            android:id="@+id/item_rv_medication_layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/general_padding"
            android:layout_toRightOf="@+id/item_rv_end_point_iv_icon">

        <TextView
                android:id="@+id/item_rv_end_point_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/item_rv_end_point_tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_rv_end_point_tv_name"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textColor="@color/gray"/>

    </RelativeLayout>


</RelativeLayout>